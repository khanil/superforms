include includes/head
	title Главная | SuperForms
	link(rel="stylesheet", href="/styles/react-widgets.css")
body
	header.forms
		nav.container
			- if (isAdmin)
				a.pull-left.pre-active(href='/users') Пользователи
			div.triangle.pull-left.triangle-left
			a.pull-left.active Формы
			div.triangle.pull-left.triangle-right
			a.pull-right(href='#profile' title='Профиль' data-placement='left')
				span.glyphicon.glyphicon-user
	
	div#root.container
	script#info(type="application/json").
		{
			"getUrl": "/api/forms",
			"postUrl": "/api/answers/",
			"copyUrl": "/api/forms/id/copy",
			"previewUrl": "/forms/id/preview",
			"deleteUrl": "/api/forms/id/delete",
			"editUrl": "/forms/id/edit",
			"reportUrl": "/forms/id/responses",
			"sendUrl": "/api/forms/id/send",
			"statusUrl": "/api/forms/id/status"
		}
	script(type="text/javascript", src="/scripts/main.js")