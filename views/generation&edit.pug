include includes/head
head
	title #{title} | SuperForms
	link(rel="stylesheet", href="/styles/react-widgets.css")
body
	header.forms
		nav.container
			- if (isAdmin)
				a.pull-left(href='/users') Пользователи
			a.pull-left.pre-active(href='/') Формы
			div.triangle.pull-left.triangle-left
			- if (type === 'CREATE_FORM')
				a.pull-left.active Создание формы
			- else
				a.pull-left.active Редактирование формы
			div.triangle.pull-left.triangle-right
			a.pull-right(href='#profile' title='Профиль' data-placement='left')
				span.glyphicon.glyphicon-user

	div#root.container
	script#info(type="application/json").
		{
			"type": "#{type}",
			"getUrl": "/api/forms/#{id}",
			"createUrl": "/api/forms",
			"updateUrl": "/api/forms/#{id}/update",
			"previewUrl": "/forms/#{id}/preview",
			"sendUrl": "/api/forms/#{id}/send"
		}
	script(type="text/javascript", src="/scripts/generation.js")