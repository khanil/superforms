include includes/head
	title Сообщение | SuperForms
body
	header.responses
		nav.container
			- if (isUser)
				- if (isAdmin)
					a(href='/users') Пользователи
				a(href='/forms') Формы
				include includes/signout
			- else 
				include includes/signin

	div.container.message
		h2 #{title}
		h4 #{text}
		h4!= html